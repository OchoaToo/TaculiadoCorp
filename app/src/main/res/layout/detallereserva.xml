<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_degradado">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="45dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="45dp"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline7"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivHotelDetalle"
            android:layout_width="285dp"
            android:layout_height="170dp"
            android:background="@drawable/shadow_cardview"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/tvNumeroReservaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Numero de Reserva: "
            android:textColor="#000000"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/tvNombreHotelDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Hotel:  "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEstadoReservaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Estado de Reserva:  "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNombreClienteDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Nombre:  "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTelefonoClienteDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Telefono:  "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvHabitacionDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Tipo de Habitacion:  "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNumeroHabitacionesDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Numero de Habitaciones:  "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNumeroAdultosDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Total Adultos:  "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNumeroMenoresDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Total Menores:  "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCheckInDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Check In:  "
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCheckOutDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Check Out:  "
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvComplementosDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Complementos:  "
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTotalReservaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Total de Reserva: $"
            android:textColor="#FF0000"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tvPagosAplicadosDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Pagos Aplicados: $"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMontoFaltante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/asap"
            android:text="Monto Pendiente: $"
            android:textColor="#FF9800"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>