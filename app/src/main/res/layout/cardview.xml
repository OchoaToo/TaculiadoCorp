<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background"
    >

    <ImageView
        android:id="@+id/ivHotel"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_marginStart="52dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNumeroReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de Reserva: "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/ivHotel"
        app:layout_constraintTop_toBottomOf="@id/ivHotel" />


    <TextView
        android:id="@+id/tvCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-In:  "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvNumeroReserva"
        app:layout_constraintTop_toBottomOf="@id/tvNumeroReserva" />

    <TextView
        android:id="@+id/tvCheckOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check-Out: "
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvCheckIn"
        app:layout_constraintTop_toBottomOf="@id/tvCheckIn" />







</androidx.constraintlayout.widget.ConstraintLayout>